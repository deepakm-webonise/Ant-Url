= form_for @ant do |f|
  - if @ant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ant.errors.count, "error")} prohibited this ant from being saved:"
      %ul
        - @ant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :in_url
    = f.text_field :in_url
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :clicks
    = f.number_field :clicks
  .field
    = f.label :snapshot
    = f.text_field :snapshot
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
